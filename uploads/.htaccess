# uploads 디렉토리 보안

# PHP 실행 방지
<FilesMatch "\.php$">
    Order allow,deny
    Deny from all
</FilesMatch>

# 이미지와 비디오 파일만 허용
<FilesMatch "\.(jpg|jpeg|png|gif|webp|mp4|webm)$">
    Order allow,deny
    Allow from all
</FilesMatch>

# 다른 모든 파일 접근 차단
<FilesMatch "^(?!\.(jpg|jpeg|png|gif|webp|mp4|webm)$)">
    Order allow,deny
    Deny from all
</FilesMatch>
